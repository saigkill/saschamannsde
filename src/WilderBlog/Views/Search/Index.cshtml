@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model BlogResult
@{
    ViewBag.Title = Localizer["viewbag-title"];
    ViewBag.PageName = Localizer["viewbag-pagename"];
    ViewBag.PageBlurb = $"#/Results: {Model.TotalResults}";
    ViewBag.PageImage = "/img/headers/search.jpg";
    ViewBag.ControllerName = "Search";
}
<div class="row">
    <div class="col-lg-12">
        <form id="searchForm" novalidate>
            <div class="input-group">
                <input type="text" class="form-control form-control-lg" id="search" value="@ViewBag.Term" required placeholder="@Localizer["placeholder"]" />
                <span class="input-group-btn">
                    <button class="btn btn-success btn-lg" type="submit"><i class="fas fa-search"></i></button>
                </span>
            </div>
        </form>
    </div>
</div>

@if (Model.Stories != null)
{
    <div class="row">
        <div class="col-lg-12">
            <partial name="_Pager" />
        </div>
    </div>
    @foreach (var story in Model.Stories)
    {
        <partial name="_StoryBrief" model="story" />
    }

    <div class="row">
        <div class="col-lg-12">
            <partial name="_Pager" />
        </div>
    </div>
}