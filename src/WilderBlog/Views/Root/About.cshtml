<div class="row">
    <div class="col-lg-6">
        <h4>Publications</h4>
        <div class="card">

            @foreach (var pub in pubs.Get())
            {
                <div class="card-header">
                    <h4 class="card-subtitle"><a href="@pub.Link" target="_blank">@pub.Title</a></h4>
                </div>
                <div class="card-body">
                    <div class="card-text"><small>@pub.Comments</small></div>
                    <div class="card-text"><small>@pub.PublicationName - @pub.Publisher</small></div>
                    @if (!string.IsNullOrWhiteSpace(pub.Identifier))
                    {
                        <div class="muted"><small>@pub.Identifier, Published: <time datetime="@pub.DatePublished">@pub.DatePublished</time></small></div>
                    }
                    else
                    {
                        <div class="muted"><small>Published: @pub.DatePublished</small></div>
                    }
                </div>
            }

        </div>
    </div>
